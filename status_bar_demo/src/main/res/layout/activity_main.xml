<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_opera_status_bar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="状态栏操作(全屏+状态栏无文字图标)" />

    <Button
        android:id="@+id/btn_opera_status_bar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="状态栏操作(全屏+状态栏有文字图标)" />

    <Button
        android:id="@+id/btn_opera_status_bar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="修改状态栏颜色" />

    <Button
        android:id="@+id/btn_immersion_status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="沉浸式状态栏" />
</LinearLayout>